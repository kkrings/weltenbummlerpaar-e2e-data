{
	"name": "Weltenbummlerpaar E2E Data",
	"build": {
		"dockerfile": "Dockerfile",
		"args": { 
			"VARIANT": "16-bullseye"
		}
	},
	"settings": {
		"editor.renderWhitespace": "all",
		"editor.rulers": [80],
		"[typescript]": {
			"editor.defaultFormatter": "esbenp.prettier-vscode"
		}

	},
	"extensions": [
		"dbaeumer.vscode-eslint",
		"esbenp.prettier-vscode"
	],
	"postCreateCommand": "npm install",
	"remoteUser": "node"
}
